<% provide :title, t(".title") %>
<h1><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :fullname %>
      <%= f.text_field :fullname, class: "form-control" %>

      <%= f.label :age %>
      <%= f.text_field :age, class: "form-control" %>

      <%= f.label :birth_date, t(".form.dob") %>
      <%= f.date_select :birth_date, {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 18, end_year: Date.today.year - 100}, {required: true} %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t(".form.password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".form.button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
